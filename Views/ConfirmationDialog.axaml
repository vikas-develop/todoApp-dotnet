<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TodoApp.Desktop.Views.ConfirmationDialog"
        Title="Confirm" 
        Width="400" 
        Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#FFFFFF">
    <Grid RowDefinitions="Auto,*,Auto" Margin="20" Name="MainGrid">
        <TextBlock Grid.Row="0" 
                   Name="TitleText"
                   FontWeight="Bold" 
                   FontSize="18" 
                   Margin="0,0,0,16"/>
        <TextBlock Grid.Row="1" 
                   Name="MessageText"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Margin="0,0,8,0"
                    MinWidth="80"/>
            <Button Content="Delete" 
                    Click="Confirm_Click"
                    Classes="danger"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>

