@model TodoApp.Models.Todo

@{
    ViewData["Title"] = "Edit Todo";
}

<div class="form-container">
    <h2>Edit Todo</h2>
    
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <label asp-for="Title" class="form-label">Title *</label>
            <input asp-for="Title" class="form-control" placeholder="Enter todo title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter todo description (optional)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <div class="checkbox-group">
                <input type="checkbox" asp-for="IsCompleted" class="form-check-input" />
                <label asp-for="IsCompleted" class="form-check-label">Mark as completed</label>
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

