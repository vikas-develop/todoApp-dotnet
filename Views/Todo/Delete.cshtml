@model TodoApp.Models.Todo

@{
    ViewData["Title"] = "Delete Todo";
}

<div class="form-container">
    <h2>Delete Todo</h2>
    
    <div class="alert alert-warning">
        <h3>Are you sure you want to delete this todo?</h3>
    </div>
    
    <div class="todo-details">
        <div class="detail-item">
            <strong>Title:</strong>
            <p>@Model.Title</p>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="detail-item">
                <strong>Description:</strong>
                <p>@Model.Description</p>
            </div>
        }
        
        <div class="detail-item">
            <strong>Status:</strong>
            <p>@(Model.IsCompleted ? "Completed" : "Pending")</p>
        </div>
        
        <div class="detail-item">
            <strong>Created:</strong>
            <p>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
        </div>
    </div>
    
    <form asp-action="Delete" method="post" class="form-actions">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

